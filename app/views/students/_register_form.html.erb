<div class="container">
    <div class="row">
    <%= form_tag(register_students_path, method: "post") do %>

        <div class="span3">
            <div class="bottom-gap">
                <%= label_tag :course_types %>
                <select id="course_types" name="student[course_types]">
                    <option value=""></option>
                    <%= StudentCourse.all.each do |sc| %>
                        <option value="<%=sc.id%>"><%=sc.type_name%></option>
                    <% end %>
                </select>
            </div>

            <div class="bottom-gap">
                <%= label_tag :additional_modules %>
                <select id="additional_modules" name="student[additional_modules]">
                    <option value=""></option>
                    <%= AdditionalModule.all.each do |sc| %>
                        <option value="<%=sc.id%>"><%=sc.type_name%></option>
                    <% end %>
                </select>
            </div>

            <div class="bottom-gap">
                <%= label_tag :date_enrolled %>
                <input type="text" id="date_enrolled" name="student[enrolled_at]" class="datepicker">
            </div>

            <div class="bottom-gap">
                <%= label_tag :first_name %>
                <input type="text" id="first_name" name="student[first_name]">
            </div>

            <div class="bottom-gap">
                <%= label_tag :middle_name %>
                <input type="text" id="middle_name" name="student[middle_name]">
            </div>

            <div class="bottom-gap">
                <%= label_tag :last_name %>
                <input type="text" id="last_name" name="student[last_name]">
            </div>

            <div class="bottom-gap">
                <%= label_tag :phone %>
                <input type="text" id="phone" name="student[phone]">
            </div>

            <div class="bottom-gap">
                <%= label_tag :mobile %>
                <input type="text" id="mobile" name="student[mobile]">
            </div>

            <div class="bottom-gap">
                <%= label_tag :email %>
                <input type="text" id="email" name="student[email]">
            </div>

            <div class="bottom-gap">
                <%= label_tag :fax %>
                <%= text_field_tag :fax,nil, :class => 'text_field' %>
            </div>

            <div class="bottom-gap-50"></div>

        </div>

        <div class="span3">
            <div class="border-bottom">
                <%= label_tag :postal_details, nil %>
            </div>

            <div class="top-gap bottom-gap">
                <%= label_tag :address %>
                <%= text_field_tag :current_expiry_date,nil, :class => 'text_field' %>
            </div>

            <div class="bottom-gap">
                <%= label_tag :postal_code,nil, :class => 'control-label' %>
                    <input type="text" id="course_postal_code" autocomplete="off" placeholder="Enter Postal Code" >
                    <input type="hidden" id="course_postal_code_hidden" name="course[postal_code]" />
            </div>

            <div class="bottom-gap">
                <%= label_tag :town,nil, :class => 'control-label' %>
                    <select id="course_town" name="course[town]">
                        <option value=""></option>
                    </select>
            </div>

            <div class="bottom-gap">
                <%= label_tag :state, nil, :class => 'control-label' %>
                <select id="course" name="course[town]">
                    <option value=""></option>
                </select>
            </div>

            <div class="border-bottom">
                <%= label_tag :further_information, nil %>
            </div>

            <div class="top-gap bottom-gap">
                <%= label_tag :industry, nil, :class => 'control-label' %>
                <select id="course" name="course[town]">
                    <option value=""></option>
                </select>
            </div>

            <div class="bottom-gap row" style="margin-left:20px">
                    <input id="special_needs" name="special_needs" type="checkbox" class="pull-left"/>
                    <label class="pull-left left-gap-10" for="special_needs">Special Needs</label>
            </div>



            <div class="bottom-gap row" style="margin-left:0px">
                <div class="bottom-gap pull-left">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="pull-left left-gap-10" for="hearing">Hearing</label>
                </div>

                <div class="bottom-gap pull-right" style="margin-right:50px">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="pull-left left-gap-10" for="hearing">Hearing</label>
                </div>
            </div>



            <div class="bottom-gap row" style="margin-left:0px">
                <div class="bottom-gap pull-left">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="control-label pull-left left-gap-10" for="hearing">Hearing</label>
                </div>

                <div class="bottom-gap pull-right" style="margin-right:50px">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="control-label pull-left left-gap-10" for="hearing">Hearing</label>
                </div>
            </div>

            <div class="bottom-gap row" style="margin-left:0px">
                <div class="bottom-gap pull-left">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="control-label pull-left left-gap-10" for="hearing">Hearing</label>
                </div>

                <div class="bottom-gap pull-right" style="margin-right:50px">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="control-label pull-left left-gap-10" for="hearing">Hearing</label>
                </div>
            </div>

            <div class="bottom-gap row" style="margin-left:0px">
                <div class="bottom-gap pull-left">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="control-label pull-left left-gap-10" for="hearing">Hearing</label>
                </div>

                <div class="bottom-gap pull-right" style="margin-right:50px">
                    <input id="hearing" name="hearing" type="checkbox" class="pull-left"/>
                    <label class="control-label pull-left left-gap-10" for="hearing">Hearing</label>
                </div>
            </div>

            <div class="bottom-gap">
                <%= label_tag :others_specify %>
                <%= text_field_tag :others_specify,nil, :class => 'text_field' %>
            </div>

            <div class="bottom-gap-50"></div>
        </div>

        <div class="span3">
            <div class="bottom-gap">
                <%= label_tag :comments %>
                <textarea rows="3" id="venue_notes" name="students[comments]"></textarea>
            </div>


            <div class="bottom-gap">
                <%= label_tag :course_fee %>
                <%= text_field_tag :course_fee,nil, :class => 'text_field' %>
            </div>

            <div class="bottom-gap">
                <%= label_tag :payment_method,nil, :class => 'control-label' %>
                <select id="payment_method" name="student[payment_method]">
                    <option value=""></option>
                </select>
            </div>

            <div class="bottom-gap">
                <%= label_tag :payment_date %>
                <%= text_field_tag :payment_date,nil, :class => 'text_field datepicker' %>
            </div>

            <div class="bottom-gap row" style="margin-left:0px">
                <input id="paid" name="paid" type="checkbox" class="pull-left"/>
                <label class="pull-left left-gap-10" for="paid">Paid</label>
            </div>

        </div>

        <div class="span3">
            <div class="bottom-gap">
                <%= label_tag :current_accreditation %>
                <%= text_field_tag :first_name,nil, :class => 'text_field' %>
            </div>

            <div class="bottom-gap">
                <%= label_tag :current_expiry_date %>
                <%= text_field_tag :first_name,nil, :class => 'text_field' %>
            </div>

            <div class="top-gap bottom-gap">
                <label for="feedback" id="feedback">How did you hear about Chemcert?</label>
                <select id="feedback" name="student[feedback]">
                    <option value=""></option>
                </select>
            </div>

            <div class="bottom-gap">
                <%= label_tag :other %>
                <%= text_field_tag :other,nil, :class => 'text_field' %>
            </div>

            <div class="form-actions">
                <div class="row bottom-gap-20">
                    <%= submit_tag "Save as Enquiry", :id => 'save_enquiry', :class => 'btn btn-primary pull-left' %>
                </div>

                <div class="row">
                    <%= submit_tag "Save as Enrollment", :id => 'save_enrolment', :class => 'btn btn-primary pull-left'%>
                </div>
            </div>
    </div>

    <% end %>
    </div>
</div>




<style>
    select {
        height: 25px;
    }

    input[type="text"] {
        height: 20px;
    }

    .table-striped tbody > tr:nth-child(2n+1) > th {
        background-color:#606060;
        color:#FFF;
    }

    .table td{
        background-color:#E0E0E0;
        color:#fff;
    }

    .table-striped tbody > tr:nth-child(2n+1) > td {
        background-color:#D0D0D0;
        color:#000;
    }
</style>