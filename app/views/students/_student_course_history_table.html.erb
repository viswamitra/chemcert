<table class="table table-striped">
    <tr>
        <th> Course Code </th>
        <th> Course Date </th>
        <th> Trainer </th>
        <th> Town </th>
        <th> State </th>
        <th> Result</th>
        <th> Course Type </th>
        <th> Special Modules </th>
    </tr>


    <% @student.student_course_detail_histories.each do |course_detail| %>
    <tr>

        <td> <%= course_detail.course.course_code %> </td>
        <td> <%= course_detail.course.course_date %> </td>
        <td> <%= course_detail.course.trainer.name %> </td>
        <td> <%= course_detail.course.location_relation.town.name %> </td>
        <td> <%= course_detail.course.location_relation.state.name %> </td>
        <td> <%= course_detail.try(:result) %> </td>
        <td> <%= course_detail.try(:student_course).try(:type_name) %> </td>
        <td> <%= course_detail.try(:additional_module).try(:type_name) %> </td>

    </tr>

    <% end %>


</table>