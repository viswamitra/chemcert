<%= form_for @rto, :html => { :id => "rto_form", :class => 'parsley-form', :"data-validate" => 'parsley' } do |f| %>



    <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
        <%= f.text_field :name, :class => 'text_field', :"data-required" => "true" %>

        </div>
    </div>
    <div class="control-group">
        <%= f.label :provider, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :provider, :class => 'text_field' %>
        </div>
    </div>

    <div class="form-actions">
        <%= f.submit "create rto", :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    training_organizations_path, :class => 'btn' %>
    </div>
<% end %>

<script>
    $(document).ready(function () {
        $('#rto_form').parsley({
            successClass: 'success',
            errorClass: 'error',
            errors: {
                classHandler: function(el) {
                    return $(el).closest('.control-group');
                },
                errorsWrapper: '<div class=\"controls\"></div>',
                errorElem: '<span></span>'
            }
        });
    });
</script>

