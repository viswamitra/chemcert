<%= form_for @rto, :html => { :class => 'form-horizontal',:parsley_validate => "true" } do |f| %>

    <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :name, :class => 'text_field', :required => true %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :provider, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :provider, :class => 'text_field' %>
        </div>
    </div>

    <div class="form-actions">
        <%= f.submit "create rto", :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    training_organizations_path, :class => 'btn' %>
    </div>
<% end %>

